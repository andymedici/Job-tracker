# ============================================================================
# REQUIRED - Application Core
# ============================================================================
DATABASE_URL=postgresql://user:password@localhost:5432/jobintel
API_KEY=your_secret_api_key_here_min_32_chars
ADMIN_API_KEY=your_admin_api_key_here_min_32_chars

# ============================================================================
# OPTIONAL - Enhanced Features
# ============================================================================

# Redis for caching and rate limiting (recommended)
REDIS_URL=redis://localhost:6379

# Email Notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@yourcompany.com
EMAIL_RECIPIENT=alerts@yourcompany.com

# External Services
BROWSERLESS_URL=https://chrome.browserless.io
BROWSERLESS_TOKEN=your_token_here

# Monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
LOG_LEVEL=INFO

# ============================================================================
# CONFIGURATION
# ============================================================================

# Database Pool
DB_POOL_SIZE=15
DB_MAX_OVERFLOW=25

# Feature Flags
ENABLE_WEB_SCRAPING=true
ENABLE_EMAIL_REPORTS=false
ENABLE_WEBHOOKS=false
ALLOW_QUERY_API_KEY=false

# Rate Limiting
RATE_LIMIT_ENABLED=true

# Scheduler
SCHEDULER_TIMEZONE=UTC
REFRESH_INTERVAL_HOURS=6

# Flask
FLASK_ENV=production
PORT=8080
DEBUG=false

# CORS (comma-separated origins)
ALLOWED_ORIGINS=*
